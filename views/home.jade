extends layout

block content
  h1 #{organization}
  if eventsEnabled
    h3 Upcoming Events
    table(class="table")
      thead
        tr
         th Title
         th Start Time
         th End Time
         th Location
         th Sign Up
      tbody
        each event in events
          tr
            td=event.title
            +dateRow(event.starttime)
            +dateRow(event.endtime)
            td=event.location
            td
              a(href="/event/#{event.id}") Sign Up
  h3 Next Meeting
  table(class="table")
    thead
      tr
       th Date
       th Room
       th Summary
    tbody
      if meeting != ""
        tr
          +dateRow(meeting.date)
          td=meeting.room
          td=meeting.summary
