extends ../layout

block content
  form.form-horizontal(id='lookup-form', method="GET")
    legend Lookup Member
    .form-group
      label.col-sm-3.control-label(for='mnum') M#
      .col-sm-6
        input.form-control(type='text', name='mnum', id='mnum')
      .col-sm-3
        button.btn.btn-success(type='submit', id="")
          i.fa.fa-check
          | Find

  form.form-horizontal(id='signup-form', method='POST')
    input(type='hidden', name='_csrf', value=token)
    legend Add New Member
    .form-group
      label.col-sm-3.control-label(for='email') Email
      .col-sm-7
        input.form-control(type='email', name='email', id='email', placeholder='Email', autofocus)
    .form-group
      label.col-sm-3.control-label(for='First Name') First Name
      .col-sm-7
        input.form-control(type='text', name='firstName', id='firstName', placeholder='John')
    .form-group
      label.col-sm-3.control-label(for='Last Name') Last Name
      .col-sm-7
        input.form-control(type='text', name='lastName', id='lastName', placeholder='Doe')
    .form-group
      label.col-sm-3.control-label(for='Major') Major
      .col-sm-7
        input.form-control(type='text', name='major', id='major', placeholder='Engineering')
    .form-group
      label.col-sm-3.control-label(for='mnum') M#
      .col-sm-7
        input.form-control(type='text', name='mnum', id='mnum2', placeholder='M0XXXXXXX', autofocus)
    .form-group
      .col-sm-offset-3.col-sm-7
        button.btn.btn-success(type='submit')
          i.fa.fa-check
          | Signup

  script(type='text/javascript' src="/js/lookup.js").
